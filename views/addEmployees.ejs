<% include ./partials/header %>

<h1 style="text-align: center">Fill this Form To Become a Employee</h1>
<div style="height: 30px"></div>
<div class="container" style="width: 40%">
        <form action="/addEmployees" method="POST">
                <div class="row">
                <div class="col form-group">
                    <input type="text" class="form-control" name="ename" placeholder="Name" required>
                </div>
                <div class="col form-group">
                    <input type="text" class="form-control" name="gender" placeholder="Gender" required>
                </div>
                <div class="col form-group">
                    <input type="text" class="form-control" name="DOB" placeholder="DOB" required>
                </div>
                <div class="col form-group">
                    <input type="text" class="form-control" name="bid" placeholder="Department" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Be Our Employe</button>
                </div>
            </div>
        </form>
</div>
